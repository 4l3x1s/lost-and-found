{
  "name": "project3",
  "version": "1.0.0",
  "description": "A MERN application",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legendarybrij/project-3.git"
  },
  "author": "Alexis Corrieras, Brijesh Patel, Peiji Song, Amanda Tom√©, Alex Treude",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/legendarybrij/project-3/issues"
  },
  "homepage": "https://github.com/legendarybrij/project-3#readme",
  "dependencies": {
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.1",
    "react-facebook-login": "^4.1.1",
    "react-google-login": "^5.0.4",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.1"
  }
}
